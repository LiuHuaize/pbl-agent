[flake8]
max-line-length = 100
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    E722,  # do not use bare 'except'
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    migrations,
    node_modules
per-file-ignores =
    __init__.py:F401
    settings.py:E501
max-complexity = 10